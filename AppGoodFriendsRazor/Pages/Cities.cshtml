<div class="container px-4 py-4" id="friends-in-a-country">
    <h2 class="pb-2 border-bottom">Friends in @Model.Country</h2>
    <p>Click in on a city below to see my friends living in that city.</p>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4 py-5">

        @foreach (var city in Model.StatsPerCity)
        {
            <div class="col d-flex align-items-start">
                <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em">
                    <use xlink:href="#home" />
                </svg>
                <div>
                    <h3 class="fw-bold mb-0 fs-4 text-body-emphasis">@city.Key</h3>
                    <p>@city.Value.FriendsCount friends and @city.Value.PetsCount pets.</p>
                    <a asp-page="/FriendsList" asp-route-country=@Model.Country asp-route-city=@city.Key asp-route-nrOfFriends='@city.Value.FriendsCount' class="btn btn-primary">
                        See friends
                    </a>
                </div>
            </div>


        }
    </div>
</div>

<div class="container px-4 py-4 d-none" id="friends-in-a-country">
    <h2 class="pb-2 border-bottom">Friends in @Model.Country</h2>
    <p>Click in on a city below to see my friends living in that city.</p>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4 py-5">
        <div class="col d-flex align-items-start">
            <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em">
                <use xlink:href="#backpack" />
            </svg>
            <div>
                <h3 class="fw-bold mb-0 fs-4 text-body-emphasis">Stockholm</h3>
                <p>15 friends and 52 pets.</p>
                <a href="#list-of-friends" class="btn btn-primary">
                    See friends
                </a>
            </div>
        </div>

    </div>
</div>